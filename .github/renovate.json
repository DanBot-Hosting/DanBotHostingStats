{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended",
        ":automergeStableNonMajor"
    ],
    "npm": {
        "packageRules": [
            {
                "matchUpdateTypes": [
                    "minor",
                    "patch"
                ],
                "groupName": "all non-major dependencies",
                "versioningStrategy": "widen" 
            }
        ]
    }
}
